@model CloudCart.Models.PurchaseOrder

@{
    Layout = "_mainLayout";
    ViewData["Title"] = "Purchase Screen";
}

@section Styles{
<link rel="stylesheet" href="~/css/Purchase/purchase.css" />
}

<div class="purchase-screen">
    <h4>Purchase Order Entry</h4>
    <div class="Entry-select-block">
        <div class="input-block">
            <div class="label-block"><label for="PurchaseDate" class="input-block-label">Purchase Date</label></div>
            <input id="PurchaseDate" class="input-block-entry" value="@DateTime.Now" readonly />
        </div>
        <div class="input-block">
            <div class="label-block"><label for="PurchaseInvoiceNumber" class="input-block-label">Invoice Number</label>
            </div>
            <input id="PurchaseInvoiceNumber" class="input-block-entry" readonly />
        </div>
        <div class="input-block">
            <div class="label-block"><label for="PurchaseCourierCharge" class="input-block-label">Carrier Charge</label>
            </div>
            <input id="PurchaseCourierCharge" class="input-block-entry" value="30.0" readonly />
        </div>
        <div class="input-block">
            <div class="label-block"><label for="ItemName" class="input-block-label">Item Name</label></div>
            <select id="ItemName" class="input-block-entry">
                <option selected hidden value="null">---selected---</option>
            </select>
        </div>
        <div class="input-block">
            <div class="label-block"><label for="ItemSupplierId" class="input-block-label">Item Supplier</label></div>
            <select id="ItemSupplier" class="input-block-entry">
                <option selected hidden value="null">---selected---</option>
            </select>
        </div>
        <div class="input-block">
            <div class="label-block"><label for="ItemQuantity" class="input-block-label">Item Quantity</label></div>
            <input type="number" id="ItemQuantity" class="input-block-entry" value="0" min="0" />
        </div>
        <div class="input-block">
            <div class="label-block"><label for="Itemprice" class="input-block-label">Item price</label></div>
            <input type="number" id="ItemPrice" class="input-block-entry" value="0" readonly />
        </div>
        <div class="input-block">
            <div class="label-block"><label for="ItemTotalPrice" class="input-block-label">Item Total Price</label>
            </div>
            <input type="number" id="ItemTotalPrice" class="input-block-entry" value="0" readonly />
        </div>
        <div class="input-block">
            <div class="label-block"><label for="PurchaseTotalPrice" class="input-block-label">Grand Total Items Price</label>
            </div>
            <input type="number" id="PurchaseTotalPrice" name="PurchaseTotalPrice" class="input-block-entry" value="0"
                readonly />
        </div>
    </div>
    <div class="actions-block">
        <button onclick="addToCartCall();" class="btn btn-primary">Add to Cart</button>
        <button onclick="emptyCartCall();" class="btn btn-primary">Empty Cart</button>
    </div>
</div>


<div class="purchase-cart-view">
    <h4>Cart Data</h4>
    <div class="cart-table">
    </div>
</div>


<div class="purchase-actions">    
    <h4>Purchase Actions</h4>
    <button id="confirm-purchase" class="btn">Confirm Purchase</button>
</div>

@section Scripts{
    <script src="~/js/Purchase/purchase.js"></script>
}

