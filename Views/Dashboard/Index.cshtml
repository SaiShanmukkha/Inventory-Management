@{
    Layout = "_mainLayout";
    ViewData["Title"] = "Dashboard";
}

@section Styles{
    <link rel="stylesheet" href="~/css/Dashboard/dashboard.css"/>
}


 <div class="dashboard-screen">

     <div class="recent-purchase-order">
         <h4>Recent Purchase Orders</h4>
         <div class="purchase-orders-table">
             <table class="table table-active table-dark table-hover table-bordered">
                 <thead class="custom-thead">
                     <tr>
                         <th>Order Id</th>
                         <th>Purchase Invoice Number</th>
                         <th>Total Purchase Price</th>
                         <th>Purchase Date</th>
                     </tr>
                 </thead>
                 <tbody>
                      @foreach (PurchaseOrder item in ViewBag.purchaseRecentOrders)
                     {
                         <tr>
                             <td>@item.PurchaseOrderID</td>
                             <td>@item.PurchaseInvoiceNumber</td>
                             <td>@(item.PurchaseTotalPrice+item.PurchaseCourierCharge)</td>
                             <td>@item.PurchaseDate</td>
                         </tr>
                     }
                 </tbody>
             </table>
         </div>
     </div>
     <div class="recent-sell-order">
         <h4>Recent Sell Orders</h4>
         <div class="sell-orders-table">
             <table class="table table-active table-dark table-hover table-bordered">
                 <thead class="custom-thead">
                     <tr>
                         <th>Order Id</th>                         
                         <th>Customer Name</th>                         
                         <th>Customer Email</th>                         
                         <th>Customer Phone</th>                         
                         <th>Sell Invoice Number</th>
                         <th>Total Sold Price</th>
                         <th>Sold Date</th>
                     </tr>
                 </thead>
                 <tbody>
                    @foreach (SellOrder item in ViewBag.sellRecentOrders)
                     {
                         <tr>
                             <td>@item.SellOrderID</td>
                             <td>@item.CustomerName</td>
                             <td>@item.CustomerEmail</td>
                             <td>@item.CustomerPhone</td>
                             <td>@item.SellInvoiceNumber</td>
                             <td>@(item.SellCourierCharge+item.SellTotalPrice)</td>
                             <td>@item.SellDate</td>
                         </tr>
                     }
                 </tbody>
             </table>
         </div>
     </div>
 </div>


@section Scripts{
    <script src="~/js/Dashboard/dashboard.js"></script>
}

